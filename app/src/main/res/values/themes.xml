<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ResticGamesScroller" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#282828</item>
    </style>

    <style name="Theme.ResticGamesScroller" parent="Base.Theme.ResticGamesScroller">
        <item name="android:fontFamily">@font/vazirmatn</item>
    </style>


    <style name="ImageButton" parent="Theme.ResticGamesScroller">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">8dp</item>

        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="UserBadge" parent="Theme.ResticGamesScroller">
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Glassmorphism">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/blur_effect</item>
        <item name="android:outlineProvider">background</item>
    </style>
</resources>